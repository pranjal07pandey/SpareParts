<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewreportinvenntory"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contextClickable="false"
    cardview:cardBackgroundColor="@color/Titlehome"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:id="@+id/linearlatou"
        android:background="@drawable/jjj"
        android:weightSum="7">



        <TextView
            android:id="@+id/inventory_report_date"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text="Date"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"

            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/inventory_report_name"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="@color/background"
            android:ellipsize="marquee"
            android:textAlignment="center"
            android:maxLength="10"
            android:layout_weight="1"
            android:text="Name"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/inventory_report_pid"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:textColor="@color/background"
            android:ellipsize="marquee"
            android:maxLength="5"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="P Id"
            android:textStyle="normal"/>



        <TextView
            android:id="@+id/inventory_report_wholsaler"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Wholesaler"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/inventory_report_cp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Cp"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"

            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/inventory_report_mp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Mp"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/inventory_report_quantity"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Quantity"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />




    </LinearLayout>

</android.support.v7.widget.CardView>
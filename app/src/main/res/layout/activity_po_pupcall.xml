<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:background="@color/background"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="25dp"
        android:layout_height="25dp"
android:layout_marginLeft="300dp"
        android:background="@drawable/cerclebackground"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/Titlehome"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/linearnameshop"
        android:layout_below="@+id/txtclose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background">



        <TextView
            android:layout_width="wrap_content"
            android:background="@color/background"
            android:layout_height="wrap_content"
            android:text="Chocolate Wholesaler"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="35dp"
            android:id="@+id/nameofshop1"
            android:textColor="@color/Titlehome"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:background="@color/bluelight"
        android:layout_width="200dp"
        android:layout_below="@+id/linearnameshop"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">


            <ImageButton
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/call"
                android:layout_marginHorizontal="60dp"
                android:text="150"
                android:background="@drawable/baseline_call_white_48dp"
                android:textSize="18sp"
                android:textColor="@color/Titlehome"/>



    </LinearLayout>



</RelativeLayout>
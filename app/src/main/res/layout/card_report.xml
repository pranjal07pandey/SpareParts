<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewreport"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contextClickable="false"
    cardview:cardBackgroundColor="@color/Titlehome"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:id="@+id/linearlatou"
        android:background="@drawable/jjj"
        android:weightSum="7">



        <TextView
            android:id="@+id/date"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Date"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"

            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/report_transactionid"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:textColor="@color/background"
            android:ellipsize="marquee"
            android:maxLength="4"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="TID"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/report_code"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="@color/background"
            android:ellipsize="marquee"
            android:textAlignment="center"
            android:maxLength="10"
            android:layout_weight="1"
            android:layout_below="@+id/docscategory_title"
            android:text="Code"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/report_quantity"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="10"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"

            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/report_costprice"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Cost Price"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"

            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/report_sellingprice"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Selling Price"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"

            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/report_profit"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Profit"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />





    </LinearLayout>

</android.support.v7.widget.CardView>
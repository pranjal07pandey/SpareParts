<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="240dp"
    android:background="@drawable/bglogin"
    android:padding="5dp"
    android:layout_gravity="center">
    <ImageButton
        android:id="@+id/buttonOk3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:background="@drawable/close"
        android:gravity="center"
        android:textColor="@color/Titlehome"
        android:textStyle="bold"
        android:layout_marginRight="10dp"/>



    <LinearLayout
        android:layout_marginTop="10dp"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout



            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="160dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonOk1"
                android:text="150"
                android:background="@drawable/delivered"
                android:textSize="18sp"
                android:textColor="@color/Titlehome"/>

        </LinearLayout>

        <LinearLayout


            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="3dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19"
                android:id="@+id/buttonOk2"
                android:textSize="18sp"
                android:background="@drawable/undelivered"
                android:textColor="@color/Titlehome"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:id="@+id/pricelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout


            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:id="@+id/bikeprice"
                android:textSize="20sp"
                android:textColor="@color/Titlehome"/>

        </LinearLayout>

        <LinearLayout


            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undelivered"
                android:id="@+id/carprice"
                android:textSize="20sp"
                android:textColor="@color/Titlehome"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>



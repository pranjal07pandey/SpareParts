<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewsecondinventory"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contextClickable="false"
    cardview:cardBackgroundColor="@color/Titlehome"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:id="@+id/linearlatou"
        android:background="@drawable/jjj"
        android:weightSum="3">



        <TextView
            android:id="@+id/color"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Ram Chandra Service Center"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"

            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/size"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:textColor="@color/background"
            android:ellipsize="marquee"
            android:maxLength="10"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Kapan, Kathmandu"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/quantity"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:textColor="@color/background"
            android:ellipsize="marquee"
            android:textAlignment="center"

            android:maxLength="10"
            android:layout_weight="1"
            android:layout_below="@+id/docscategory_title"
            android:text="Kapan, Kathmandu"
            android:textStyle="normal"/>




    </LinearLayout>

</android.support.v7.widget.CardView>
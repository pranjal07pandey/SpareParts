<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/cardviewinventory_id"
android:clickable="true"
android:foreground="?android:attr/selectableItemBackground"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:contextClickable="true"
android:layout_marginTop="2dp"
cardview:cardBackgroundColor="@color/Titlehome"
xmlns:cardview="http://schemas.android.com/apk/res-auto"
cardview:cardCornerRadius="4dp">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:orientation="horizontal"
    android:id="@+id/linearlatou"
    android:background="@drawable/kk"
    android:weightSum="5">

    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:id="@+id/inventoryName1"
        android:layout_margin="2dp"
        android:textSize="15sp"
        android:textColor="@color/background"
        android:ellipsize="marquee"
        android:textAlignment="center"

        android:maxLength="10"
        android:layout_weight="1"
        android:text="Kathmandu Nepal"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/inventoryProductId1"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="123"
        android:layout_margin="2dp"
        android:ellipsize="marquee"
        android:maxLength="20"
        android:layout_weight="1"
        android:textAlignment="center"

        android:textColor="@color/background"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:id="@+id/inventoryQuantity1"
        android:textSize="15sp"
        android:layout_margin="2dp"
        android:textColor="@color/background"
        android:ellipsize="marquee"
        android:maxLength="10"
        android:layout_weight="1"
        android:textAlignment="center"
        android:text="1567"
        android:textStyle="normal"/>


    <TextView
        android:id="@+id/inventoryCp1"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="233"
        android:layout_margin="2dp"
        android:ellipsize="marquee"
        android:maxLength="20"
        android:layout_weight="1"
        android:textAlignment="center"

        android:textColor="@color/background"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:id="@+id/inventoryMp1"
        android:textSize="15sp"
        android:layout_margin="2dp"
        android:textColor="@color/background"
        android:ellipsize="marquee"
        android:maxLength="10"
        android:layout_weight="1"
        android:textAlignment="center"
        android:text="4545"
        android:textStyle="normal"/>



</LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.Fragments.twomonthsreportfragment"

    android:fillViewport="true">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/relativelayoutgraphsales">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales Graph"
            android:layout_centerHorizontal="true"
            android:id="@+id/textviewsales"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/mylinegraph1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/textviewsales"
            android:layout_marginTop="0dp"></com.github.mikephil.charting.charts.LineChart>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/relativelayoutgraphprofit"
        android:layout_below="@+id/relativelayoutgraphsales">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profit Graph"
            android:layout_centerHorizontal="true"
            android:id="@+id/textviewprofit"/>

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/mylinegraph2">
            </com.github.mikephil.charting.charts.LineChart>


            </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/relativelayoutgraphbar"
        android:layout_below="@+id/relativelayoutgraphprofit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inventory Graph"
            android:layout_centerHorizontal="true"
            android:id="@+id/textviewbar"/>


        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/chartinventory">

        </com.github.mikephil.charting.charts.BarChart>

    </RelativeLayout>
</RelativeLayout>

</ScrollView>